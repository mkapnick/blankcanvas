<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">

        <item name="android:textSize">14sp</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextView</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:textAppearanceButton">@style/CustomTheme.ButtonTextAppearance</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:editTextStyle">@style/RobotoEditTextStyle</item>
        <item name="android:alertDialogStyle">@style/MyDialogStyle</item>
        <item name="android:progressBarStyle">@style/RobotoAlertDialogStyle</item>
        <item name="android:fontFamily">sans-serif-light</item>



        <!-- Primary colors !-->
        <!--<item name="colorControlNormal">@color/app_icon_blue</item>
        <item name="colorControlActivated">@color/app_icon_blue</item>
        <item name="colorControlHighlight">@color/app_icon_blue</item>
        <item name="colorAccent">@color/app_icon_blue</item>
        <item name="android:textColorSecondary">@color/app_icon_blue</item>
        <item name="android:colorAccent">@color/app_icon_blue</item>
        <item name="android:colorPrimaryDark">@color/app_icon_blue</item>
        <item name="android:colorPrimary">@color/app_icon_blue</item>!-->

        <item name="colorAccent">@color/app_icon_blue</item>
        <item name="android:colorAccent">@color/app_icon_blue</item>
        <item name="android:colorPrimaryDark">@color/app_icon_dark_blue</item>
        <item name="android:colorPrimary">@color/app_icon_blue</item>

    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
    </style>

    <style name="CustomTheme.ButtonTextAppearance" parent="@style/Base.TextAppearance.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Actionbar Theme -->
    <style name="ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/action_bar_background</item>
    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_action_search_light</item>
        <item name="closeIcon">@drawable/ic_action_cancel_light_2</item>
    </style>

    <style name="AutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textCursorDrawable">@drawable/cursor_custom</item>
        <item name="android:textColorHighlight">@color/black</item>
    </style>


    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoEditTextStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="MyDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/app_icon_dark_blue</item>
        <item name="android:textColorSecondary">@color/app_icon_dark_blue</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">14sp</item>

    </style>

    <!-- Define standard dimensions to comply with Holo-style grids and rhythm. -->

    <dimen name="margin_tiny">4dp</dimen>
    <dimen name="margin_small">8dp</dimen>
    <dimen name="margin_medium">16dp</dimen>
    <dimen name="margin_large">32dp</dimen>
    <dimen name="margin_huge">64dp</dimen>

    <!-- Semantic definitions -->

    <dimen name="horizontal_page_margin">@dimen/margin_medium</dimen>
    <dimen name="vertical_page_margin">@dimen/margin_medium</dimen>

</resources>
