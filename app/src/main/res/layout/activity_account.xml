<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tutor_list_activity_relative_layout"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewProfileRelativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_profile_icon"
            android:background="@drawable/user_profile_circled"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/view_profile_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#717171"
            android:text="View Profile"
            android:layout_below="@+id/user_profile_icon"
            android:layout_marginTop="15dp"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text="Create group session"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_centerInParent="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/about"
        android:text="About"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/help"
        android:padding="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/help"
        android:text="Help"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>