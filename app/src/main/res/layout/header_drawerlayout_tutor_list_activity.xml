<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tutor_list_activity_relative_layout"
    android:paddingBottom="15dp"
    android:background="@color/app_icon_blue"
    >

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/user_profile_icon"
        android:background="@drawable/user_profile_circled_light"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        />

    <TextView
        android:id="@+id/view_profile_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#fff"
        android:text="View Profile"
        android:layout_below="@+id/user_profile_icon"
        android:layout_marginTop="5dp"
        />

</RelativeLayout>