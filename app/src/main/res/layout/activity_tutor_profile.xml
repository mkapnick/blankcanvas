<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_tutor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<RelativeLayout
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scroll"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/profileBackgroundImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:layout_alignTop="@+id/userInfo"
            android:layout_marginLeft="15dp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="115dp"
            android:id="@+id/userInfo">


            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:hint="Name"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:gravity="left"
                    android:textSize="25sp"
                    android:background="#000000"
                    android:maxLines="2"
                    android:textCursorDrawable="@null"
                    android:alpha=".7"
                    android:editable="false"
                    android:clickable="false"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/major"
                    android:hint="Major"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="10sp"
                    android:gravity="left"
                    android:layout_marginTop="15dp"
                    android:background="#000000"
                    android:layout_below="@+id/name"
                    android:textCursorDrawable="@null"
                    android:alpha=".7"
                    android:editable="false"
                    android:clickable="false"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/year"
                    android:hint="Year"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="10sp"
                    android:gravity="left"
                    android:background="#000000"
                    android:layout_below="@+id/major"
                    android:textCursorDrawable="@null"
                    android:alpha=".7"
                    android:editable="false"
                    android:clickable="false"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rate"
                    android:hint="Rate"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:gravity="left"
                    android:textSize="10sp"
                    android:background="#000000"
                    android:maxLines="2"
                    android:textCursorDrawable="@null"
                    android:alpha=".7"
                    android:layout_below="@+id/year"
                    android:layout_marginTop="10dp"
                    android:editable="false"
                    android:clickable="false"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textColor="@color/white"
                    android:text="I'm interested"
                    android:id="@+id/im_interested_button"
                    android:background="@drawable/im_interested_button"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textSize="10dp"
                    android:layout_marginRight="5dp"
                    android:clickable="false"
                    android:layout_alignTop="@+id/rate"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                     />

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:id="@+id/relativeLayout">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/scrollview1"
            android:fillViewport="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/about"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                android:editable="false"
                android:singleLine="false"
                android:paddingLeft="10dp"
                android:scrollbars="vertical"/>
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/scrollview2"
            android:layout_below="@id/scrollview1"
            android:fillViewport="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/classes"
                android:hint="Classes I'm tutoring"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textColorHint="@color/white"
                android:editable="false"
                android:singleLine="false"
                android:paddingLeft="10dp"
                android:scrollbars="vertical"
                />

        </ScrollView>

    </RelativeLayout>
</RelativeLayout>

    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer_tutor"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="#ffffff"
        android:background="#111"/>

</android.support.v4.widget.DrawerLayout>
