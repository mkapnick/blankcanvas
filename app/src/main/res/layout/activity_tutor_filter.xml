<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tutor.cesh.filter.TutorFilterActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply filters"
        android:background="@drawable/oval_blue"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter by Major"
        android:id="@+id/majorFilterTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:padding="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextFilterMajor"
        android:hint="Filter..."
        android:gravity="right"
        android:layout_below="@+id/majorFilterTextView"
        android:editable="false"
        android:focusableInTouchMode="false"
        android:layout_toEndOf="@+id/majorFilterTextView"
        android:textColor="#717171"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter by rate"
        android:id="@+id/rateFilterTextView"
        android:layout_below="@+id/majorFilterTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:padding="10dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextFilterRate"
        android:hint="Filter..."
        android:gravity="right"
        android:layout_below="@+id/rateFilterTextView"
        android:editable="false"
        android:focusableInTouchMode="false"
        android:layout_alignStart="@+id/editTextFilterMajor"
        android:textColor="#717171"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter by year"
        android:id="@+id/yearFilterTextView"
        android:layout_below="@+id/rateFilterTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextFilterYear"
        android:hint="Filter..."
        android:gravity="right"
        android:layout_below="@+id/yearFilterTextView"
        android:editable="false"
        android:focusableInTouchMode="false"
        android:layout_alignStart="@+id/editTextFilterRate"
        android:textColor="#717171"
        />

</RelativeLayout>
