<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tutor.cesh.filter.TutorFilterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/actionBarModal"
        >

        <TextView
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_action_back"
            android:id="@+id/arrow_back_image"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Reset"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:id="@+id/resetTextViewFilter"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <tutor.cesh.widget.textview.TextViewWithFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter by major"
        android:id="@+id/majorFilterTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:textColor="#A4A4A4"
        android:textSize="12dp"
        android:layout_below="@+id/actionBarModal"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextFilterMajor"
        android:hint="Filter by major..."
        android:gravity="right"
        android:layout_below="@+id/majorFilterTextView"
        android:editable="false"
        android:focusableInTouchMode="false"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="14dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter by rate"
        android:id="@+id/rateFilterTextView"
        android:layout_below="@+id/editTextFilterMajor"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:textColor="#A4A4A4"
        android:textSize="12dp"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextFilterRate"
        android:hint="Filter by rate..."
        android:gravity="right"
        android:layout_below="@+id/rateFilterTextView"
        android:editable="false"
        android:focusableInTouchMode="false"
        android:layout_alignStart="@+id/editTextFilterMajor"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="14dp"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter by year"
        android:id="@+id/yearFilterTextView"
        android:layout_below="@+id/editTextFilterRate"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:textColor="#A4A4A4"
        android:textSize="12dp"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextFilterYear"
        android:hint="Filter by year..."
        android:gravity="right"
        android:layout_below="@+id/yearFilterTextView"
        android:editable="false"
        android:focusableInTouchMode="false"
        android:layout_alignStart="@+id/editTextFilterRate"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="14dp"
        android:layout_marginTop="10dp"


        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:background="@drawable/oval_blue"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:id="@+id/applyFilterButton"/>

</RelativeLayout>
