<android.support.v4.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent">


<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:scrollbars="vertical"
    android:layout_alignParentTop="true"
    android:background="#F1F1F1">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/profileBackgroundImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_alignBottom="@+id/dummyLayout"
            android:layout_alignParentTop="true"/>

        <ImageView
            android:id="@+id/profileBackgroundImageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="onUserClick"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_icon"
            android:layout_below="@+id/saveButton"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:id="@+id/saveButton"
            android:layout_alignParentRight="true"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            android:clickable="true"
            android:onClick="onUserClick"
            android:background="#000"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="right"
            android:textSize="18dp"
            android:alpha=".9"
            />

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:layout_marginLeft="15dp"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/userInfo"
            android:layout_marginBottom="200dp"
            android:visibility="invisible"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/profileBackgroundImage"
            android:background="@drawable/border2"
            android:padding="5dp"
            android:alpha=".9"
            android:id="@+id/nameLayout">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:hint="Name"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:gravity="left"
                android:textSize="25sp"
                android:maxLines="2"
                android:textCursorDrawable="@null"
                android:layout_centerHorizontal="true"
                android:background="#00000000"
                android:layout_marginBottom="15dp"/>

            <ImageView
                android:id="@+id/nameButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:onClick="onUserClick"
                android:scaleType="fitXY"
                android:background="@drawable/edit_icon"
                android:layout_alignBottom="@+id/name"
                android:layout_toEndOf="@+id/name"
                android:layout_marginLeft="5dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dummyLayout"
            android:layout_marginTop="345dp">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userInfoSection"
            android:background="#F0F0F0"
            android:alpha=".9"
            android:paddingTop="10dp"
            android:paddingBottom="50dp"
            android:layout_below="@+id/dummyLayout"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/majorTitle"
                android:hint="Major"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="14dp"
                android:paddingLeft="10dp"
                android:background="#00000000"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/majorButton"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:onClick="onUserClick"
                android:scaleType="fitXY"
                android:background="@drawable/edit_icon"
                android:layout_alignBottom="@+id/majorTitle"
                android:layout_toEndOf="@+id/majorTitle"
                android:layout_marginLeft="5dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/major"
                android:hint="Major"
                android:textColor="#4A4A4A"
                android:textColorHint="#4A4A4A"
                android:textSize="14dp"
                android:paddingLeft="10dp"
                android:background="#00000000"
                android:layout_below="@+id/majorTitle"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yearTitle"
                android:hint="Year"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="14dp"
                android:paddingLeft="10dp"
                android:clickable="false"
                android:editable="false"
                android:background="#00000000"
                android:textStyle="bold"
                android:layout_below="@+id/major"
                android:layout_marginTop="15dp"
                />

            <ImageView
                android:id="@+id/yearButton"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:onClick="onUserClick"
                android:background="@drawable/edit_icon"
                android:layout_alignBottom="@+id/yearTitle"
                android:layout_toEndOf="@+id/yearTitle"
                android:layout_marginLeft="5dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/year"
                android:hint="Year"
                android:textColor="#4A4A4A"
                android:textColorHint="#4A4A4A"
                android:textSize="14dp"
                android:paddingLeft="10dp"
                android:background="#00000000"
                android:layout_below="@+id/yearTitle"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Classes"
                android:paddingLeft="10dp"
                android:id="@+id/classesTitle"
                android:textColor="@color/black"
                android:layout_below="@id/year"
                android:layout_marginTop="15dp" />

            <ImageView
                android:id="@+id/classesButton"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:onClick="onUserClick"
                android:background="@drawable/edit_icon"
                android:layout_alignBottom="@+id/classesTitle"
                android:layout_toEndOf="@+id/classesTitle"
                android:layout_marginLeft="5dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/classes"
                android:hint="Classes I'm taking"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textColorHint="@color/black"
                android:singleLine="false"
                android:paddingLeft="10dp"
                android:scrollbars="vertical"
                android:background="#00000000"
                android:layout_below="@+id/classesTitle"
                android:layout_marginTop="5dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:layout_below="@id/classes"
                android:text="About"
                android:textStyle="bold"
                android:id="@+id/aboutTitle"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                />

            <ImageView
                android:id="@+id/aboutButton"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:onClick="onUserClick"
                android:background="@drawable/edit_icon"
                android:layout_alignBottom="@+id/aboutTitle"
                android:layout_toEndOf="@+id/aboutTitle"
                android:layout_marginLeft="5dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/about"
                android:textColor="#4A4A4A"
                android:textColorHint="#4A4A4A"
                android:textSize="14dp"
                android:singleLine="false"
                android:paddingLeft="10dp"
                android:scrollbars="vertical"
                android:text="testing 123"
                android:background="#00000000"
                android:layout_below="@id/aboutTitle"
                />

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>

<!-- The navigation drawer -->
<ListView android:id="@+id/left_drawer"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:choiceMode="singleChoice"
    android:divider="#ffffff"
    android:background="#111"/>


</android.support.v4.widget.DrawerLayout>

