<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/container"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@color/app_icon_blue"
tools:context="tutor.cesh.arrival.LoginActivity"
tools:ignore="MergeRootFrame" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayout"
    android:layout_marginTop="40dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info"
        android:background="@drawable/oval_white"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="textEmailAddress"
            android:textColor="#717171"
            android:textColorHint="#717171"
            android:ems="10"
            android:id="@+id/emailTextView"
            android:hint= "@string/email"
            android:gravity="left"
            android:textCursorDrawable="@null"
            android:layout_marginTop="10dp"
            android:background="#00000000"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordTextView"
            android:textColor="#717171"
            android:textColorHint="#717171"
            android:layout_below="@+id/emailTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textCursorDrawable="@null"
            android:gravity="left"
            android:background="#00000000"
            />

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/loginButton"
        android:textColor="@color/white"
        android:onClick="validateArrival"
        android:background="@drawable/oval_app_icon_blue"
        android:gravity="center"
        android:layout_below="@+id/info"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:layout_alignStart="@+id/info"
        android:layout_alignEnd="@+id/info"/>

</RelativeLayout>





</RelativeLayout>