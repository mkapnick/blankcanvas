
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        >
        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/profileBackgroundImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_below="@+id/saveButton"
                    android:layout_alignBottom="@+id/dummyLayout" />

                <ImageView
                    android:id="@+id/profileBackgroundImageButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:onClick="onUserClick"
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/edit_icon"
                    />


            <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:adjustViewBounds="true"
                    android:layout_alignTop="@+id/userInfo"
                    android:layout_marginLeft="15dp"
                    android:onClick="onUserClick"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Done"
                    android:id="@+id/saveButton"
                    android:layout_alignParentRight="true"
                    android:paddingRight="20dp"
                    android:textColor="@color/white"
                    android:clickable="true"
                    android:onClick="onUserClick"
                    android:background="#403E3E"
                    android:paddingBottom="10dp"
                    android:gravity="right"
                    android:paddingTop="5dp"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="115dp"
                    android:layout_marginLeft="115dp"
                    android:id="@+id/userInfo">


                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/name"
                        android:hint="Name"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:gravity="left"
                        android:textSize="25sp"
                        android:background="#000000"
                        android:maxLines="2"
                        android:textCursorDrawable="@null"
                        android:alpha=".7"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/major"
                        android:hint="Major"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="10sp"
                        android:gravity="left"
                        android:layout_marginTop="15dp"
                        android:background="#000000"
                        android:layout_below="@+id/name"
                        android:textCursorDrawable="@null"
                        android:alpha=".7"/>


                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/year"
                        android:hint="Year"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="10sp"
                        android:gravity="left"
                        android:background="#000000"
                        android:layout_below="@+id/major"
                        android:textCursorDrawable="@null"
                        android:alpha=".7"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rate"
                        android:hint="Rate"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:gravity="left"
                        android:textSize="10sp"
                        android:background="#000000"
                        android:maxLines="2"
                        android:textCursorDrawable="@null"
                        android:alpha=".7"
                        android:layout_below="@+id/year"
                        android:layout_marginTop="10dp"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textColor="@color/white"
                        android:text="I'm interested"
                        android:id="@+id/im_interested_button"
                        android:background="@drawable/im_interested_button"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textSize="10dp"
                        android:clickable="false"
                        android:layout_alignTop="@+id/rate"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp" />

                </RelativeLayout>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:scrollbars="horizontal"
                android:layout_below="@+id/userInfoSection">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <SeekBar
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/seekBar"
                        android:layout_marginTop="10dp"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Black and White"
                        android:id="@+id/blackAndWhite"
                        android:textColor="@color/white"
                        android:background="@drawable/filter_button"
                        android:layout_toRightOf="@+id/seekBar"
                        android:scrollHorizontally="true"
                        android:scaleType="fitXY"
                        android:padding="5dp"
                        android:alpha=".7"
                        android:textSize="13dp"
                        android:layout_marginRight="10dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Except Orange"
                        android:id="@+id/exceptOrange"
                        android:textColor="@color/white"
                        android:background="@drawable/filter_button"
                        android:layout_toRightOf="@+id/blackAndWhite"
                        android:scrollHorizontally="true"
                        android:scaleType="fitXY"
                        android:padding="5dp"
                        android:textSize="13dp"
                        android:alpha=".7"

                        android:layout_marginRight="10dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Except Purple"
                        android:id="@+id/exceptPurple"
                        android:textColor="@color/white"
                        android:background="@drawable/filter_button"
                        android:layout_toRightOf="@id/exceptOrange"
                        android:scrollHorizontally="true"
                        android:scaleType="fitXY"
                        android:padding="5dp"
                        android:textSize="13dp"
                        android:alpha=".7"

                        android:layout_marginRight="10dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Except Blue"
                        android:id="@+id/exceptBlue"
                        android:textColor="@color/white"
                        android:background="@drawable/filter_button"
                        android:layout_toRightOf="@id/exceptPurple"
                        android:scrollHorizontally="true"
                        android:scaleType="fitXY"
                        android:textSize="13dp"
                        android:padding="5dp"
                        android:alpha=".7"

                        android:layout_marginRight="10dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Except Green"
                        android:id="@+id/exceptGreen"
                        android:textColor="@color/white"
                        android:background="@drawable/filter_button"
                        android:layout_toRightOf="@id/exceptBlue"
                        android:scrollHorizontally="true"
                        android:scaleType="fitXY"
                        android:padding="5dp"
                        android:textSize="13dp"
                        android:alpha=".7"

                        android:layout_marginRight="10dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Except Yellow"
                        android:id="@+id/exceptYellow"
                        android:textColor="@color/white"
                        android:scrollHorizontally="true"
                        android:background="@drawable/filter_button"
                        android:layout_toRightOf="@id/exceptGreen"
                        android:scaleType="fitXY"
                        android:padding="5dp"
                        android:textSize="13dp"
                        android:alpha=".7"

                        android:layout_marginRight="10dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Except Red"
                        android:id="@+id/exceptRed"
                        android:textColor="@color/white"
                        android:scrollHorizontally="true"
                        android:background="@drawable/filter_button"
                        android:layout_toRightOf="@id/exceptYellow"
                        android:scaleType="fitXY"
                        android:padding="5dp"
                        android:textSize="13dp"
                        android:alpha=".7"

                        android:layout_marginRight="10dp"/>
                </RelativeLayout>
            </HorizontalScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dummyLayout"
                android:layout_marginTop="345dp">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="350dp"
                android:id="@+id/userInfoSection">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/scrollview1"
                    android:fillViewport="true">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:id="@+id/about"
                        android:hint="About"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:paddingLeft="10dp"
                        android:scrollbars="vertical"/>

                </ScrollView>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/scrollview2"
                    android:layout_below="@id/scrollview1"
                    android:fillViewport="true">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/classes"
                        android:hint="Classes you are tutoring this semester followed by a space"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="14dp"
                        android:singleLine="false"
                        android:paddingLeft="10dp"
                        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                        android:scrollbars="vertical"/>

                </ScrollView>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</android.support.v4.widget.DrawerLayout>
