<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tutor.cesh.arrival.SessionStartActivity"
    android:background="@color/app_icon_blue">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:background="@drawable/feature_graphic_plain"
        android:id="@+id/fullLogo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fullLogo"
        android:text="Authenticating...."
        android:textColor="#fff"
        android:layout_marginTop="-55dp"
    />

</RelativeLayout>
