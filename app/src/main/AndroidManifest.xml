<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tutor.cesh" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".arrival.BeginningActivity"
            android:label="@string/title_activity_beginning" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".arrival.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".arrival.NewAccountActivity"
            android:label="@string/title_activity_new_account" >
        </activity>
        <activity
            android:name=".list.TutorListActivity"
            android:label="@string/title_activity_tutor_list" >
        </activity>
        <activity
            android:name=".profile.ReadOnlyTutorProfileActivity"
            android:label="@string/title_activity_read_only_tutor_profile" >
        </activity>
        <activity
            android:name=".arrival.SessionStartActivity"
            android:label="@string/title_activity_student_tutor_profile_container" >
        </activity>
        <activity
            android:name=".profile.EditStudentAndTutorProfileActivity"
            android:label="@string/title_activity_edit_student_and_tutor_profile" >
        </activity>
        <activity
            android:name=".profile.StudentTutorProfileContainerActivity"
            android:label="@string/title_activity_session_start" >
        </activity>
    </application>

</manifest>
